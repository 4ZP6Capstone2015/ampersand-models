INTERFACE Asset1(eigenaar,acceptabelRestrisico) : I[Asset]
 BOX [ manager     : eigenaar
   , "accepted status"   : acceptabelRestrisico
   , "manually accepted"  : acceptabelRestrisico
   , obligations : verplichtingVan~
   ]

INTERFACE Assets1(eigenaar,acceptabelRestrisico) : I[ONE]
   BOX [ Assets : V[ONE*Asset]
     BOX [ manager     : eigenaar
     , accepted    : acceptabelRestrisico
     , obligations : verplichtingVan~
   ] ]

INTERFACE Assets2 (acceptabelRestrisico): I[Asset];-acceptabelRestrisico
 BOX [ accepted    : acceptabelRestrisico
   , obligations : verplichtingVan~
   ]

