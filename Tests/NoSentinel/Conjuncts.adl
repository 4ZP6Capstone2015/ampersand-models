CONTEXT Conjuncts IN ENGLISH
-- Test file for signal conjuncts

PROCESS P
POPULATION A CONTAINS  [A1, A2]

r1 :: A * X = [ ("A1", "X1") ]
r2 :: A * X = [ ("A2", "X1") ]
r3 :: A * X = [ ("A3", "X1") ]
r4 :: A * X = [ ("A4", "X1") ]

show :: A * S = [ ("A1", "Concept A1"); ("A2", "Concept A2"); ("A3", "Concept A3") ]
show :: X * S = [ ("X1", "Concept X1") ]

RULE signal1: -r1 /\ -r2
RULE signal2: -r2 /\ -r3
RULE signal3: V[ONE]
--RULE inv1: -r1 --shares conjunct with signal1
--RULE inv2: -r4 --shares conjunct with signal1

-- same as signal1 and signal2, but with fancy violation message
RULE fancy1: -r1 /\ -r2 VIOLATION (TXT "Fancy signal-1: (", SRC show, TXT ", ", TGT show, TXT ")")
RULE fancy2: -r2 /\ -r3 VIOLATION (TXT "Fancy signal-2: (", SRC show, TXT ", ", TGT show, TXT ")")

ROLE role1 MAINTAINS signal1, fancy1
ROLE role2 MAINTAINS signal2, fancy2
ROLE role3 MAINTAINS signal3
ENDPROCESS

INTERFACE Overview (r1,r2,r3,r4)  : I[ONE]
BOX[ "r1"  : V[ONE*A]
     BOX[ "A" : I
        , "X" : r1
        ]
   , "r2"  : V[ONE*A]
     BOX[ "A" : I
        , "X" : r2
        ]
   , "r3"  : V[ONE*A]
     BOX[ "A" : I
        , "X" : r3
        ]
   , "r4"  : V[ONE*A]
     BOX[ "A" : I
        , "X" : r4
        ]
   , "A"  : V[ONE*A]
   , "X"  : V[ONE*X]
   ]

INTERFACE AForRole1 (r1,r2) FOR role1 : I[A]
BOX [ "r1" : r1
    , "r2" : r2
    ] 

INTERFACE AForRole2 (r2,r3) FOR role2 : I[A]
BOX [ "r2" : r2
    , "r3" : r3
    ]

INTERFACE AForRole3 (r1,r2,r3) FOR role3 : I[A]
BOX [ "r1" : r1
    , "r2" : r2
    , "r3" : r3
    ]

ENDCONTEXT
