CONTEXT DemoAdvocatentableau

--INCLUDE "Gebeurtenis.adl"


--INCLUDE "Persoonsgegevens.adl"
--INCLUDE "Dossiers.adl"


INTERFACE Advocatentableau																		: I[ONE]
BOX [ 	Advocaten				: V[ONE*Advocaat],
	Kantoren				: V[ONE*Kantoor]
]

INTERFACE "Advocaat zoeken"																		: I[ONE]
BOX [	Zoeken					: V[ONE*Zoek]
]

INTERFACE " op BAR-nummer" 																		: I[Zoek]
BOX [ "BAR-nummer"				: zoekOpBAR
							BOX [ 
									"BAR-nummer"		: barnummer
														BOX [
																"BAR-nummer"			: barnummer~,
																Advocaat 				: isAdvocaat~,
																Inschrijvingsverzoek	: behoortBij~,
																Beëdiging				: beëdigingBehoortBij~,
																Kantoor					: houdtKantoor
															]
								]
]		

INTERFACE " op naam" 																			: I[Zoek]
BOX [	"Gezochte naam"			: zoekOpNaam
							BOX	[
									"BAR-nummer"		: barnummer~,
									Advocaat 			: isAdvocaat~,
									Inschrijvingsverzoek: behoortBij~,
									Beëdiging			: beëdigingBehoortBij~,
									Kantoor				: houdtKantoor
								]
]


INTERFACE "Advocaat toevoegen" (bar, inschrijving, ingeschrevene, verzoekTotInschrijving, 
						beëdiging, inschrijvingkantoor)								: I[Inschrijving]
BOX [
	"BAR-nummer"			: bar~,
	Advocatennaam			: inschrijving,
	"Volledige naam"		: ingeschrevene, 
	Inschrijvingsverzoek	: verzoekTotInschrijving~,
	Beëdiging				: beëdiging~,
	"Houdt kantoor bij"		: inschrijvingkantoor
]
{-		
INTERFACE Inschrijvingen 
 																		: I[Inschrijving]
BOX [	"BAR-Nummer"			: bar~,
	Naam	 				: ingeschrevene,
	Inschrijvingsverzoek	: verzoekTotInschrijving~
							BOX [
									"Gericht aan"			: isGerichtAan,
									"Verstuurd door"		: isVerstuurdDoor
								],
	Beëdiging				: beëdiging~
							BOX [
									Rechtbank				: locatie,
									Datum					: datum
								],
	Kantoor					: inschrijvingkantoor
]
-}		

INTERFACE Advocaat 
 																		: I[Advocaat]
BOX [	"BAR-Nummer"			: barnummer~,
	Naam	 				: isAdvocaat~,
	Inschrijvingsverzoek	: behoortBij~
							BOX [
									"Gericht aan"			: isGerichtAan,
									"Verstuurd door"		: isVerstuurdDoor
								],
	Beëdiging				: beëdigingBehoortBij~
							BOX [
									Rechtbank				: locatie,
									Datum					: datum
								],
	Kantoor					: houdtKantoor
]		
	
INTERFACE Kantoor 																				: I[Kantoor]
BOX	[	
	Kantoornummer			: kantoornummer~,
	Kantooradres			: kantooradres,
	Rechtbank				: kantoor,
	Advocaten				: houdtKantoor~
]

INTERFACE "Kantoor- en advocaatinformatie"														: I[Rechtbank]
BOX [	Kantoren				: kantoor~,
	Beëdigingen				: locatie~,
	Inschrijvingsverzoeken	: isGerichtAan~
							BOX [				
									"Indiener van" 			: isVerstuurdDoor
															BOX [	
																	Inschrijvingsverzoek			: isVerstuurdDoor~
																],
									"Verwijst naar beëdiging"	: verzoekTotBeëdiging
				
								]
]

INTERFACE Beëdiging (isBeëdigd, datum, locatie, locatie, verzoekTotBeëdiging)			: I[Beëdiging]
BOX [	Beëdigde				: isBeëdigd~,
	Datum					: datum,
	Rechtbank				: locatie,
	Inschrijvingsverzoek	: verzoekTotBeëdiging~
]
	
INTERFACE Inschrijvingsverzoek (isVerstuurdDoor, isGerichtAan)									: I["Verzoek van inschrijving"]
BOX	[	
	"Ingediend door"		: isVerstuurdDoor,
	"Ingediend bij"			: isGerichtAan
]

INTERFACE "Persoon toevoegen" 																	: I[ID]
BOX	[	Naam					: identifier
	BOX [ 
						
						Titel						:	titel~,
						"Naam"						: 	I["natuurlijkpersoon"],
						Geboortedatum				: 	geboortedatum,
						"Land v. herkomst"			:	geboorteland,
						Geslacht					:	geslacht,
						Adresgegevens				: 	woonplaats,
						"BSN"						:	bsn,
						"GBA-nummer"				: 	gba~
		]
]

ENDCONTEXT