		, Eiser                                       : indiener
		BOX [ Naam                                    : I[Persoon]
		    , Woonplaats                              : woonplaats
			, Gemachtigde                             : gemachtigde
			]
		, Omschrijving                                : omschrijvingberoep
		, Gronden                                     : grondenberoep
		]
    , "Soort recht"                                   : soortrecht
    , Zaaktype                                        : zaaksoort
    , "Behandelende rechtbank"                        : rechtbankhoudt
    , Kamer                                           : kamer	
    , "Openstaand griffierecht"                       : griffierechtbetaald
    , "Vonnis (referentie)"                           : gewezenin~	
    ]	
	
	
INTERFACE "Zaak inzien" FOR Griffie                  : I[Zaakid] /\ -(gewezenin~;gewezenin)
BOX [ Zaaknummer                                      : zaakid
