\pard\plain \s39\fi-320\f1\fs20\li640\ql a.\tab  \'80 125,{\endash} [Red: per 1 januari 2011: \'80 101] [Red: per 1 januari 2012: \'80 127] , indien het inkomen niet hoger is dan \'80 16 800,{\endash} [Red: per 1 januari 2011: \'80 17.300] [Red: per 1 januari 2012: \'80 17.500] ;\par
\pard\plain \s39\fi-320\f1\fs20\li640\ql b.\tab \'80 183,{\endash} [Red: per 1 januari 2011: \'80 159] [Red: per 1 januari 2012: \'80 186] , indien het inkomen meer dan \'80 16 800,{\endash} [Red: per 1 januari 2011: \'80 17.300] [Red: per 1 januari 2012: \'80 17.500] en ten hoogste \'80 17 300,{\endash} [Red: per 1 januari 2011: \'80 17.900] [Red: per 1 januari 2012: \'80 18.200] bedraagt;\par
\pard\plain \s39\fi-320\f1\fs20\li640\ql c.\tab \'80 297,{\endash} [Red: per 1 januari 2011: \'80 274] [Red: per 1 januari 2012: \'80 301] , indien het inkomen meer dan \'80 17 300,{\endash} [Red: per 1 januari 2011: \'80 17.900] [Red: per 1 januari 2012: \'80 18.200] en ten hoogste \'80 18 200,{\endash} [Red: per 1 januari 2011: \'80 18.900] [Red: per 1 januari 2012: \'80 19.200] bedraagt;\par
\pard\plain \s39\fi-320\f1\fs20\li640\ql d.\tab \'80 503,{\endash} [Red: per 1 januari 2011: \'80 482] [Red: per 1 januari 2012: \'80 510] , indien het inkomen meer dan \'80 18 200,{\endash} [Red: per 1 januari 2011: \'80 18.900] [Red: per 1 januari 2012: \'80 19.200] en ten hoogste \'80 20 000,{\endash} [Red: per 1 januari 2011: \'80 20.700] [Red: per 1 januari 2012: \'80 21.000] bedraagt; en\par
