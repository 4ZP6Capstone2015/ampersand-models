INTERFACE Dagvaardingen FOR Advocaat: I[ONE]
BOX [ Dagvaardingen     : V[ONE*Document];aanbrengwijze;aanbrengwijzeNaam;'Dagvaarding';aanbrengwijzeNaam~;aanbrengwijze~ -- /\    -(V[ONE*Dagvaarding];aanhangig;zaakid;zaakid~;aanhangig~)
    ]



INTERFACE "Dagvaardingen registreren" FOR Griffie: I[ONE]
BOX [ "Dagvaardingen zonder zaaknummer"     : V[ONE*Document];aanbrengwijze;aanbrengwijzeNaam;'Dagvaarding';aanbrengwijzeNaam~;aanbrengwijze~ --/\ -(V[ONE*Document];aanhangig;zaakid;zaakid~;aanhangig~)
    ]
	
	
----------------------------------------------------
-- Interfaces die nagenoeg gelijk aan elkaar zijn --
----------------------------------------------------

INTERFACE Dagvaarding (zaaksdocument, kenmerk, aanbrengwijze, datumbetekening, producties, deurwaarder, kantoordeurwaarder, roldatum, partij, partijtype, ispartij, woonplaats, gbaVoornamen, gbaGeslachtsnaam, gemachtigde) FOR Advocaat: I[Zaakid]
BOX [ "Inleidend zaakstuk" : zaaksdocument~
      BOX [ Aanbrengkenmerk : kenmerk
          , Aanbrengwijze : aanbrengwijze
		  , "Datum betekening" : datumbetekening
	      , "Aantal producties" : producties
          , Deurwaarder        : deurwaarder
          , Kantoor        : kantoordeurwaarder
          , "Gewenste roldatum" : roldatum
	      ]
    , Partijen : partij~
	  BOX [ Partijtype : partijtype
          , Naam : ispartij~
		  BOX [ Voornaam : gbaVoornamen
		      , Achternaam : gbaGeslachtsnaam
		      , Adres : woonplaats
              ]
          , Gemachtigde : gemachtigde
		  ]
    ]

INTERFACE "Dagvaarding inzien" FOR Advocaat : I[Document]	
BOX [ Dagvaarding : kenmerk;kenmerk~
  BOX [ Aanbrengkenmerk : kenmerk
	  , Aanbrengwijze : aanbrengwijze
	  , "Datum betekening" : datumbetekening
	  , "Aantal producties" : producties
	  , Deurwaarder        : deurwaarder
	  , Kantoor        : kantoordeurwaarder
	  , "Gewenste roldatum" : roldatum
	  ]
, Partijen : zaaksdocument;partij~
  BOX [ Partijtype : partijtype
	  , Naam : ispartij~
	  BOX [ Voornaam : gbaVoornamen
		  , Achternaam : gbaGeslachtsnaam
		  , Adres : woonplaats
		  ]
	  , Gemachtigde : gemachtigde
	  ]
	 ]

INTERFACE "Zaak aanmaken" (zaakid, zaaksdossier) FOR Griffie : I[Zaakid]
BOX [ Zaaksnummer : zaakid
    , Zaaksdossier : zaaksdossier~
    ]
	 
INTERFACE "Dagvaarding registreren" (zaaksdocument, zaakid, zaakstuk) FOR Griffie : I[Document]	
BOX [ "Kenmerk dagvaarding" : kenmerk
    , "Behorend bij zaak" : zaaksdocument
      BOX [ Zaaksnummer : zaakid ]
    , Dossier : zaakstuk
	]	

	
