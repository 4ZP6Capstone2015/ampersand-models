-- Lelijke code die toegevoegd is om het zoeken mogelijk te maken
zoek :: Zoek * Zoek
 = [ ("zoek", "zoek")
   ]
   
zoekOpNaam :: Zoek * Persoon

zoekOpBAR :: Zoek * Barnummer
	
ENDPATTERN

INTERFACE Overview : I[ONE]
	BOX [ 	Advocaten				: V[ONE*Persoon];isAdvocaat,
			Kantoren				: V[ONE*Kantoor]
		]
		
INTERFACE Zoeken : I[ONE]
	BOX [	"Zoek op BAR-nummer"	: V[ONE*Zoek],
			"Zoek op naam"			: V[ONE*Zoek]
		]

INTERFACE "Zoek op BAR-nummer" : I[Zoek]
	BOX [ "BAR-nummer"				: zoekOpBAR
			BOX [ "BAR-nummer"			: barnummer
				BOX [
					"BAR-nummer"			: barnummer~,
					Advocaat 				: isAdvocaat,
					Inschrijvingsverzoek	: isVerstuurdDoor~,
					Beëdiging				: isBeëdigd,
					Kantoor					: isOndergebracht
					]
				]
		]		
		
INTERFACE "Geavanceerd zoeken" : I[Zoek]
	BOX [	"Gezochte naam"			: zoekOpNaam
			BOX	[
				"BAR-nummer"			: barnummer~,
				Advocaat 				: isAdvocaat,
				Inschrijvingsverzoek	: isVerstuurdDoor~,
				Beëdiging				: isBeëdigd,
				Kantoor					: isOndergebracht
				]
		]


INTERFACE Advocaten : I[Persoon]
	BOX	[	"BAR-Nummer"			: barnummer~,
			Advocaat 				: isAdvocaat,
			Inschrijvingsverzoek	: isVerstuurdDoor~,
			Beëdiging				: isBeëdigd,
			Kantoor					: isOndergebracht
		]
		
INTERFACE Kantoren : I[Kantoor]
	BOX	[	Kantooradres			: kantooradres,
			Rechtbank				: kantoor,
			Advocaten				: isOndergebracht~
		]
		
INTERFACE Rechtbanken : I[Rechtbank]
	BOX [	Kantoren				: kantoor~,
			Beëdigingen				: wasBetrokkenBij,
			Inschrijvingsverzoeken	: isGerichtAan~
				BOX [	"Indiener van" 					: isVerstuurdDoor
							BOX [	Inschrijvingsverzoek				: isVerstuurdDoor~],
						"Verwijst naar inschrijving"	: verzoekTotInschrijving
						
					]
		]
	
INTERFACE Beëdigingen : I[Beëdiging]
	BOX [	Beëdigde				: isBeëdigd~,
			Datum					: datum,
			Locatie					: locatie,
			Rechtbank				: wasBetrokkenBij~
		]
			
INTERFACE Inschrijvingsverzoeken : I["Verzoek van inschrijving"]
	BOX	[	"Ingediend door"		: isVerstuurdDoor,
			"Ingediend bij"			: isGerichtAan
		]
			
ENDCONTEXT