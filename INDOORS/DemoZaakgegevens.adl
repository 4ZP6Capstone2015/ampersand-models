BOX [ Zaakdossiers     : V[ONE*Dossier];zaaksdossier;zaaksdossier~
    ]

INTERFACE Dagvaardingen FOR Deurwaarder: I[ONE]
BOX [ Dagvaardingen     : V[ONE*Dagvaarding];documentnr;documentnr~ /\ -(V[ONE*Dagvaarding];dagvaarding;zaakid;zaakid~;dagvaarding~)
    ]
	
INTERFACE "Dagvaarding inzien" FOR Deurwaarder : I[Dagvaarding]
BOX [ Kenmerk : documentnr
	, "Datum betekening" : datumbetekening
	, "Eisende partij" : eiser
	BOX [ Eiser : eiser~;eiser
		, Gemachtigde : gemachtigde
		]
	, Deurwaarder : deurwaarder
	, Kantoor : kantoordeurwaarder
	, Gedaagde : ontvanger
	, "Adres gedaagde": woonplaatsontvanger
	, "Gewenste roldatum" : roldatum
	]
	
	
