BOX [ "Dagvaardingen zonder zaaknummer"     : V[ONE*Dagvaarding];documentnr;documentnr~ /\ -(V[ONE*Dagvaarding];dagvaarding;zaakid;zaakid~;dagvaarding~)
    ]
	
INTERFACE "Lopende zaken" FOR Griffier : I[ONE]
BOX [ "Lopende zaken" : V[ONE*Zaakid] /\ -(V[ONE*Zaakid];uitspraak~;uitspraak)
    ]

