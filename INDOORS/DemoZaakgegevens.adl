--------------------------------------
-- Items voor in de zwarte menubalk --
--------------------------------------

INTERFACE Dossiers FOR Griffie : I[ONE]
BOX [ Zaakdossiers     : V[ONE*Dossier];zaaksdossier;zaaksdossier~
    ]
    
INTERFACE "Lopende zaken" FOR Griffie : I[ONE]
BOX [ "Lopende zaken" : V[ONE*Zaakid] /\ -(V[ONE*Zaakid];vonnis~;vonnis)
    ]    

INTERFACE "Afgedane zaken" FOR Griffie : I[ONE]
BOX [ "Afgedane zaken" : V[ONE*Zaakid];vonnis~;vonnis
    ]
    
INTERFACE Zalen FOR Griffie : I[ONE]
BOX [ Zalen : V[ONE*Zaal]
    BOX [ Zaal : zaalnaam~ 
        , "Zaak ter zitting" : zittingszaal~;behandeling;behandeld~ /\ -(zittingszaal~;behandeling;behandeld~;vonnis~;vonnis)
        ]
    ]
    
    
------------------------------------------------------------------------------------
-- Interfaces voor griffie die te maken hebben met het raadplegen van het dossier --
------------------------------------------------------------------------------------

INTERFACE Zaaksdossier FOR Griffie : I[Dossier]
BOX [ Dossier          : zaakstuk~
    ]    

INTERFACE Zaakstuk : I[Document]
BOX [ Dossier : zaakstuk
    , Zaak : zaaksdocument
    , Documenttype : type
    , Inhoud : inhoud
    ]    

ENDCONTEXT